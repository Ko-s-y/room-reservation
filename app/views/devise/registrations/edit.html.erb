<h1 class="page-title">アカウント編集ページ</h1>
<div class="user-container">
  <h2 class="user-form-title">アカウント編集</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :full_name, class: "user-element" %><br />
      <%= f.text_field :full_name, autofocus: true, autocomplete: "name", class: "user-element-form" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "user-element" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-element-form" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "user-element" %> <i>(変更する場合のみ入力)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "user-element-form" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "user-element" %><i>(変更する場合のみ入力)</i><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user-element-form" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "user-element" %> <i></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "user-element-form" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する", class: "submit-btn btn-sub top" %>
      <p>*更新する場合、現在のパスワードを入力してください</p>
    </div>
  <% end %>

  <%# <p><%= button_to "このアカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "danger-btn" </p> %>

  <%= link_to "戻る", :back, class: "user-link-btn" %>
</div>

<div class="user-container">
  <h2 class="user-form-title">パスワードをお忘れですか?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, class: "user-element" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"user-element-form" %>
    </div>
    <div class="actions">
      <%= f.submit "パスワードリセットメールを送信する", class: "submit-btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

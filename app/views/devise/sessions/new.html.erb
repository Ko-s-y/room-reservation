<div class="user-container">
  <h2 class="user-form-title">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user-element-form" %>
    </div>
    <div class="field">
      <%= f.label :password, class: "user-element" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "user-element-form" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログインを保持する %>
      </div>
    <% end %>
    <div class="field">
      <%= f.submit "ログインする", class: "submit-btn btn-sub" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

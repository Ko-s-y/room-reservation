<h1 class="page-title">登録済みルーム一覧</h1>

<table class="room-table">
  <div class="room-regi-container">
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>住所</th>
        <th>ルーム紹介</th>
        <th>1日当たりの金額</th>
        <th>登録日</th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= link_to "a" %></td>
          <td><%= link_to room.room_name, "/rooms/#{room.id}/show" %></td>
          <td><%= room.address %></td>
          <td><%= room.description %></td>
          <td><%= room.price %></td>
          <td><%= room.created_at.to_s(:datetime_jp) %></td>
        </tr>
      <% end %>
    </tbody>
  </div>
</table>
<h3><%= link_to "ルーム新規登録", "/rooms/new", class: "submit-btn" %></h3>

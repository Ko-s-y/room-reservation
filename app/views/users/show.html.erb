<h1>ここはアカウント情報ページでっせ</h1>
<div class="user-container-show">
  <h3 class="user-form-title">アカウント</h3>
  <tr>
    <th>ID</th>
    <td><%= @user.id %></td>
  </tr><br /><br />
  <tr>
    <th>アカウント名</th>
    <td><%= @user.full_name %></td>
  </tr><br /><br />
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr><br /><br />
  <div>
    <p><%= link_to "編集", edit_user_registration_path, class: "submit-btn" %></p><br />
    <p><%= link_to "プロフィール", "/users/#{@current_user.id}/info" , class: "submit-btn" %></p><br />
    <p><%= link_to "戻る", :back, class: "danger-btn" %></p><br />
  </div>
</table>
